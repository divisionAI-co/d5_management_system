  activityId    String?
  activity      Activity?               @relation("ActivityExecutions", fields: [activityId], references: [id], onDelete: SetNull)
  proposedChanges Json?                 // Preview of changes to be applied (for UPDATE/CREATE operations)
  appliedChanges Json?                  // Actual changes that were applied
  appliedAt     DateTime?               // When changes were applied (for UPDATE/CREATE operations)
  createdAt     DateTime                @default(now())
  completedAt   DateTime?

  @@index([entityType, entityId])
  @@index([status])
  @@map("ai_action_executions")
}

