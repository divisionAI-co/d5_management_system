DATABASE_URL="postgresql://postgres:password@localhost:5432/d5_management"

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
LOG_LEVEL=debug

# JWT Authentication
JWT_SECRET=replace-with-access-token-secret
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=replace-with-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Two-Factor Authentication
TWO_FACTOR_AUTHENTICATION_APP_NAME=D5 Management System

# Email Service Configuration
EMAIL_PROVIDER=smtp # options: smtp, sendgrid, mailgun, ses
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=D5 Management System

# SMTP (Generic)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.example.com
MAILGUN_BASE_URL=https://api.mailgun.net/v3

# AWS SES
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your-aws-access-key
AWS_SES_SECRET_ACCESS_KEY=your-aws-secret-key

# Google OAuth / Integrations
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/integrations/google/callback
GOOGLE_DRIVE_FOLDER_ID=your-shared-drive-folder-id

# Calendar Integrations
GOOGLE_CALENDAR_ENABLED=true
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-tenant-id

# File Uploads
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# PDF Generation
PUPPETEER_EXECUTABLE_PATH=

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Session
SESSION_SECRET=replace-with-session-secret

# Prisma
PRISMA_LOG_LEVEL=info
